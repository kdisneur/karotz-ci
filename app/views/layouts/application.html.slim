  head
    meta charset="utf-8"
    meta name="viewport" content="width=device-width, initial-scale=1.0"
    title = content_for?(:title) ? "#{yield(:title)} - Karotz-CI" : 'Karotz-CI, continuous integration can be fun'
    meta name="description" content="#{content_for?(:meta_description) ? "#{yield(:meta_description)}" : 'The perfect tool to add some fun during you development process. Use your Karotz coupled with Travis or Semaphore'}"
    = stylesheet_link_tag    'application'
    = csrf_meta_tags

  body
    = render('generic/menu')
    = render('generic/flash', flash: flash)
    = yield
    = javascript_include_tag 'application'
